        if (detached_) {
            return false;
        }
        while (Process.isAlive(p_)) {
            ;
        }
        return Process.getStatus(p_);
    }
    public detach() {
        detached_ = true;
        Process.detach(p_);
    }
};

Process.pipeline = (_function() {
    _function splitCommand(cmd) {
        var str;
        var cmdary = [];
        var sz = cmd.length();
        for (var i = 0; i < sz; ) {
            var c = cmd[i];
            if (c == ' '[0] || c == '\t'[0] || c == '\r'[0] || c == '\n'[0]) {
                ++i;
                continue;
            }
            str = "";
            if (c == '"'[0] || c == "'"[0]) {
                var q = c;
                c = cmd[++i];
