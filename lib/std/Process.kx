    }
    public std() {
        return {
            in: opts.in,
            out: opts.out,
            err: opts.err,
        };
    }
    public run() {
        p_ = Process.run(cmdary, opts);
        return this;
    }
    public launch() {
        detached_ = true;
        Process.launch(cmdary, opts);
    }
    public isAlive() {
        if (detached_) {
            return false;
        }
        return Process.isAlive(p_);
    }
    public getStatus() {
        if (detached_) {
            return false;
        }
        return Process.getStatus(p_);
    }
