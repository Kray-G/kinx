                    c = cmd[++i];
                }
                ++i;
                cmdary.push(str);
            } else {
                while (i < sz && (c != ' '[0] && c != '\t'[0] && c != '\r'[0] && c != '\n'[0])) {
                    str += *c;
                    c = cmd[++i];
                }
                ++i;
                cmdary.push(str);
            }
        }
        return cmdary;
