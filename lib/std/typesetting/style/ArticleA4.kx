            },
            "code": {
                "margin": {
                    "left":             5.4,
                    "right":            5.4,
                },
                "breakForLong":         true,
                "numberSize":           8.5,
                "fontSize":             9.0,
                "labelsep":             10.0,
                "padding":              10.0,
                "lineColor":            [ 0.0, 0.0, 0.0, 1.0 ],
            },
            "lineFeedWidthRatio": [
                1.75,
                1.2,
                1.2,
                1.3,
                1.5,
            ],
            "paragraphSkipWidthRatio": [
                2.2,
                1.4,
                1.4,
                1.6,
                1.8,
            ],
        };
