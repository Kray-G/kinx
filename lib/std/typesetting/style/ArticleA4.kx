                "lineWidth":            2.0,
                "lineColor":            [0.0, 0.0, 0.0, 0.498039],  # grey
            },
            "draw": {
                "margin":               false,
                "imageBox":             false,
            },
            "toc": {
                "header":               "Contents",
                "lof":                  "List of Figures",
                "lot":                  "List of Tables",
                "appendix":             "Appendix ",
                "appendixFormat":       "A",
