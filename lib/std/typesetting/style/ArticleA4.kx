                "maxWidth":             0.7,
            },
            "table": {
                "label":                "Table",
                "level":                1,
                "captionsep":           6.0,
                "lineWidth":            0.5,
                "cellPadding":          5.0,
            },
            "chapter": {
                "style":                "StandardArticle",
                "pretext":              "Chapter ",
                "posttext":             null,
                "paragraphSkipWidth":   38.2,
