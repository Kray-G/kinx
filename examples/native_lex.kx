# native function can access lexical variable if it is integer.

var a = 1;
native test(n) {
    var b = a;
    return b + n;
}

System.println("test(10) = ", test(10));

native mul2(a) {
    return a * 2;
}

var x, y;
native test2(i) {
    return x = y = mul2(i); # calling a lexical native function.
}

System.println("test2(10) = ", test2(10));
System.println("x = ", x);
System.println("y = ", y);
