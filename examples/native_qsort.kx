const D = false;
const C = 1000;
const N = 200;
var tmr = new SystemTimer();
tmr.restart();
for (var i = 0; i < C; ++i) {
    demo(N, D, quicksort_n);
}
System.println("elapsed = %f" % tmr.elapsed());
tmr.restart();
for (var i = 0; i < C; ++i) {
    demo(N, D, quicksort_f);
}
